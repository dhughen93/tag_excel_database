<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tag_excel_database.controller.TagExcelDatabaseController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox>
      <children>
         <ChoiceBox fx:id="tagChoiceBox" prefWidth="150.0" />
      </children>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </HBox>
   <HBox spacing="10.0" VBox.vgrow="ALWAYS">
      <children>
          <Button fx:id="inputButton" onAction="#onInputButtonClick" text="Input" />
         <TextField fx:id="inputTextField" HBox.hgrow="ALWAYS" />
      </children>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
   </HBox>
   <HBox spacing="10.0" VBox.vgrow="ALWAYS">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <children>
         <Button fx:id="outputButton" mnemonicParsing="false" onAction="#onOutputButtonClick" text="Output" />
         <TextField fx:id="outputTextField" HBox.hgrow="ALWAYS" />
      </children>
   </HBox>
   <HBox VBox.vgrow="ALWAYS">
      <children>
         <Pane HBox.hgrow="ALWAYS" />
         <Button fx:id="submitButton" mnemonicParsing="false" onAction="#onSubmitButtonClick" text="Process" />
      </children>
   </HBox>
</VBox>
